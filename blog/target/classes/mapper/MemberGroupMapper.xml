<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="MemberGroup">

    <resultMap id="MemberGroup" type="io.laudoak.model.MemberGroup">

        <id column="id" property="id"/>
        <result column="water_mark" property="waterMark"/>
        <result column="blog_amount" property="blogAmount"/>
        <result column="updated_at" property="updatedAt"/>
        <result column="encrypt" property="encrypt"/>
        <result column="name" property="name"/>
        <result column="created_at" property="createdAt"/>
        <result column="upload_amount" property="uploadAmount"/>
    
    </resultMap>

    <sql id="table">
        `member_group`
    </sql>

    <sql id="values">

        #{name},
        #{uploadAmount},
        #{blogAmount},
        #{waterMark},
        #{encrypt},
        #{NOW()},
        #{createdAt},
        #{NOW()},
        #{updatedAt},
    
        NOW(),
        NOW()

    </sql>

    <sql id="columns">

        `id`,
        `name`,
        `upload_amount`,
        `blog_amount`,
        `water_mark`,
        `encrypt`,
        `created_at`,
        `updated_at`,
    
        `created_at`,
        `updated_at`

    </sql>

    <sql id="condition">

        WHERE 1=1
        <if test="waterMark != null">AND `water_mark`=#{waterMark}</if>
        <if test="blogAmount != null">AND `blog_amount`=#{blogAmount}</if>
        <if test="updatedAt != null">AND `updated_at`=#{updatedAt}</if>
        <if test="encrypt != null">AND `encrypt`=#{encrypt}</if>
        <if test="name != null">AND `name`=#{name}</if>
        <if test="createdAt != null">AND `created_at`=#{createdAt}</if>
        <if test="id != null">AND `id`=#{id}</if>
        <if test="uploadAmount != null">AND `upload_amount`=#{uploadAmount}</if>
    
    </sql>

    <insert id="insert" parameterType="io.laudoak.model.MemberGroup" keyProperty="id" useGeneratedKeys="true">
        INSERT INTO
        <include refid="table"/>
        (<include refid="columns"/>)
        VALUES (<include refid="values"/>)
    </insert>

    <delete id="delete" parameterType="io.laudoak.model.MemberGroup">
        DELETE FROM
        <include refid="table"/>
        <include refid="condition"/>
    </delete>

    <select id="selectOne" resultMap="MemberGroup">
        SELECT `id`,
        <include refid="columns"/>
        FROM
        <include refid="table"/>
        WHERE `id` = #{id}
        LIMIT 1
    </select>

    <select id="select" resultMap="MemberGroup">
        SELECT * FROM
        <include refid="table"/>
    </select>

    <select id="count" resultType="long">
        SELECT COUNT(*) FROM
        <include refid="table"/>
    </select>

    <update id="update" parameterType="io.laudoak.model.MemberGroup">
        UPDATE
        <include refid="table"/>
        <set>
                <if test="waterMark != null">`water_mark`=#{waterMark},</if>
                <if test="blogAmount != null">`blog_amount`=#{blogAmount},</if>
                <if test="encrypt != null">`encrypt`=#{encrypt},</if>
                <if test="name != null">`name`=#{name},</if>
                <if test="uploadAmount != null">`upload_amount`=#{uploadAmount},</if>
                `updated_at` = NOW()
        </set>
        WHERE `id`=#{id}
    </update>

</mapper>
